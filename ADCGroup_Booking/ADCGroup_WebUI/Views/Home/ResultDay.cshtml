
@{
    ViewBag.Title = "ResultDay";
    Layout = "~/Views/Shared/_Layout_FullWidth.cshtml";
}

<div class="main__content">
    <a class="btn btn-block" stype="position: fixed;left: 100%;height: 100%;z-index: 999;"> ADC GROUP </a>
    <h2>Đặt Phòng Họp</h2>
    <h4>
        Người đặt Phòng
    </h4>
    <input type="text" readonly style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;" />
    <h4>
        Ngày
    </h4>
    <input type="text" readonly value="15/11" style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;" />
    <h4>
        Tiêu đề
    </h4>
    <input type="text" placeholder="Summary" style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;" />
    <h4>
        Số lượng
    </h4>
    <input type="number" placeholder="Number Person" style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;" />
    <h4>
        Thời gian bắt đầu
    </h4>
    <input type="time" style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;" />
    <h4>
        Thời gian kết thúc
    </h4>
    <input type="time" style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;" />
    <h4>
        Chọn Phòng
    </h4>
    <select style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;">
        <option value="volvo">Phòng họp lớn lầu 2</option>
        <option value="saab">Phòng họp nhỏ lầu 2</option>
        <option value="mercedes">Phòng họp lầu 4</option>
        <option value="audi">Phòng họp lầu 6</option>
    </select>
    <h4>
        Mô tả
    </h4>
    <input type="text" placeholder="Description" style="width:75%; color:red; border:2px solid #4cd964; border-radius:5px 5px 5px 5px; height:30px !important; font-size:15px;" />
    <br /><br />
    <div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#Success">Đặt phòng</button>
        @Html.ActionLink("Quay lại","","", new { @class = "btn btn-info" })
    </div>

    &copy; Design by Ngọc Phương

    <div class="modal fade" id="Success" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thông báo</h4>
                </div>
                <div class="modal-body">
                    <h3>Bạn đã đặt cuộc họp thành công</h3>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đặt tiếp</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Trang chủ</button>
                </div>
            </div>
        </div>
    </div>
</div>
